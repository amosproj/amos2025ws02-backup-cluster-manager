<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bcm.shared.repository.ClientRepository">

    <resultMap id="ClientMap" type="com.bcm.shared.model.database.Client">
        <id     property="id"        column="id"/>
        <result property="nameOrIp"  column="name_or_ip"/>
        <result property="enabled"   column="enabled"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="ClientCols"> id, name_or_ip, enabled, created_at, updated_at </sql>

    <select id="findById" parameterType="java.util.UUID" resultMap="ClientMap">
        SELECT <include refid="ClientCols"/> FROM clients WHERE id = #{id}
    </select>

    <select id="findByNameOrIp" parameterType="string" resultMap="ClientMap">
        SELECT <include refid="ClientCols"/> FROM clients WHERE name_or_ip = #{nameOrIp}
    </select>

    <select id="findAll" resultMap="ClientMap">
        SELECT <include refid="ClientCols"/> FROM clients ORDER BY created_at DESC
    </select>

    <insert id="insert" parameterType="com.bcm.shared.model.database.Client">
        INSERT INTO clients (id, name_or_ip, enabled) VALUES (#{id}, #{nameOrIp}, #{enabled})
    </insert>

    <update id="update" parameterType="com.bcm.shared.model.database.Client">
        UPDATE clients SET name_or_ip = #{nameOrIp}, enabled = #{enabled} WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.util.UUID">
        DELETE FROM clients WHERE id = #{id}
    </delete>

</mapper>
