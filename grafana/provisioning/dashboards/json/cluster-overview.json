{
  "uid": "cluster-overview",
  "title": "Cluster Overview",
  "schemaVersion": 39,
  "version": 2,
  "editable": true,
  "refresh": "10s",
  "tags": ["cluster", "spring", "prometheus"],
  "timezone": "",
  "time": {
    "from": "now-5m",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 2,
        "hide": 0,
        "query": "label_values(process_cpu_usage, instance)",
        "includeAll": true,
        "multi": true,
        "sort": 1,
        "allValue": ".*",
        "current": {
          "selected": false,
          "text": "cluster-manager:8080",
          "value": "cluster-manager:8080"
        }
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Process CPU %",
      "id": 7,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "process_cpu_usage{instance=~\"$instance\"} * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 13 }
    },
    {
      "type": "stat",
      "title": "System CPU %",
      "id": 8,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "system_cpu_usage{instance=~\"$instance\"} * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Heap Used (MB)",
      "id": 9,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by(instance) (jvm_memory_used_bytes{area=\"heap\",instance=~\"$instance\"}) / 1024 / 1024",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "mbytes",
          "decimals": 1
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 13 }
    },
    {
      "type": "stat",
      "title": "Heap Max (MB)",
      "id": 10,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by(instance) (jvm_memory_max_bytes{area=\"heap\",instance=~\"$instance\"}) / 1024 / 1024",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "mbytes",
          "decimals": 1
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Heap Usage Trend",
      "id": 11,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by(instance) (jvm_memory_used_bytes{area=\"heap\",instance=~\"$instance\"}) / 1024 / 1024",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "mbytes"
        },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 13 }
    },
    {
      "type": "timeseries",
      "title": "Non-Heap Used (MB)",
      "id": 12,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by(instance) (jvm_memory_used_bytes{area=\"nonheap\",instance=~\"$instance\"}) / 1024 / 1024",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "mbytes"
        },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 13 }
    },
    {
      "type": "stat",
      "title": "Traffic (req/s)",
      "id": 3,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by(instance) (rate(http_server_requests_seconds_count{instance=~\"$instance\"}[5m]))",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 19 }
    },
    {
      "type": "stat",
      "title": "Saturation (Heap %)",
      "id": 4,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by(instance) (jvm_memory_used_bytes{area=\"heap\",instance=~\"$instance\"}) / sum by(instance) (jvm_memory_max_bytes{area=\"heap\",instance=~\"$instance\"}) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 75 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 19 }
    }
  ]
}