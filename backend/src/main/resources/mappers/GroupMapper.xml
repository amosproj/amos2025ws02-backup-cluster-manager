<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bcm.shared.repository.GroupRepository">

    <resultMap id="GroupMap" type="com.bcm.shared.model.database.Group">
        <id     property="id"        column="id"/>
        <result property="name"      column="name"/>
        <result property="enabled"   column="enabled"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="GroupColumns">
        id, name, enabled, created_at, updated_at
    </sql>

    <select id="findById" parameterType="java.util.UUID" resultMap="GroupMap">
        SELECT <include refid="GroupColumns"/> FROM "groups" WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="GroupMap">
        SELECT <include refid="GroupColumns"/> FROM "groups" ORDER BY created_at DESC
    </select>

    <insert id="insert" parameterType="com.bcm.shared.model.database.Group">
        INSERT INTO "groups" (id, name, enabled)
        VALUES (#{id}, #{name}, #{enabled})
    </insert>

    <update id="update" parameterType="com.bcm.shared.model.database.Group">
        UPDATE "groups"
        SET name = #{name},
            enabled = #{enabled}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.util.UUID">
        DELETE FROM "groups" WHERE id = #{id}
    </delete>
</mapper>
